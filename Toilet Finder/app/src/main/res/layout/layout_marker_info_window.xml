<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_review_toilet_padding_left_right"
        android:paddingRight="@dimen/layout_review_toilet_padding_left_right">


    <TextView
            android:id="@+id/tvMarkerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_info_window_margin_top"
            android:gravity="center"
            android:text="Title here"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_toilet_verfied_txt_size"  />


        <TextView
                android:id="@+id/tvToiletAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="verified - male"
                android:gravity="center"
                android:textSize="@dimen/tv_toilet_verfied_txt_size"  />

        <!-- layout rating -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/layoutRating"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvRatingAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="4.4"
                    android:textSize="@dimen/tv_toilet_verfied_txt_size" />

            <RatingBar
                    android:id="@+id/toiletRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="1"
                    android:rating="1"
                    android:theme="@style/RatingBarAverage" />
        </LinearLayout>

    <Button
            android:id="@+id/btnGetDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_cairo_regular"
            android:layout_marginLeft="@dimen/btn_review_margin"
            android:layout_marginRight="@dimen/btn_review_margin"
            android:text="@string/str_get_direction"
            android:textAllCaps="false"
            android:padding="0dp"
            android:layout_marginBottom="@dimen/tv_info_window_margin_top"
            android:textSize="@dimen/tv_toilet_verfied_txt_size" />
</LinearLayout>