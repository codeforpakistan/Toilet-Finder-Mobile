<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

    <ImageView
            android:layout_width="@dimen/img_nav_width_height"
            android:layout_height="@dimen/img_nav_width_height"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/nav_views_margin"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/tv_nav_txt_size"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/nav_views_margin"
            android:layout_marginRight="@dimen/nav_views_margin"
            android:layout_marginBottom="@dimen/nav_views_margin"/>

</LinearLayout>