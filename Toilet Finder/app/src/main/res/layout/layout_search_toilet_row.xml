<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_search_margin_top"
        android:orientation="vertical"
        android:padding="@dimen/layout_search_padding">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_search_margin_top"
                android:layout_weight="2.3"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_cairo_bold"
                    android:text="@string/str_public_toilet"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tv_public_toilet_txt_size" />

            <TextView
                    android:id="@+id/tvToiletAvailableFor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_cairo_regular"
                    android:text="Verified - male/female"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/tv_toilet_verfied_txt_size" />
        </LinearLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/tvToiletDistance"
                android:layout_gravity="center"
                android:text="4 km"
                android:gravity="center"
                android:fontFamily="@font/font_cairo_bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button"
                android:paddingTop="@dimen/tv_distance_padding_top_bottom"
                android:paddingBottom="@dimen/tv_distance_padding_top_bottom"
                android:textSize="@dimen/tv_toilet_verfied_txt_size"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/layout_search_margin_top"
            android:background="@color/color_light_gray" />

</LinearLayout>