<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/color_white_gray1"/>
                    <gradient android:angle="90" android:endColor="@color/color_white_gray1" android:startColor="@color/color_white_gray1" android:type="linear" />
                    <corners android:radius="0dp" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_drop" />

            </item>

        </layer-list>

    </item>

</selector>